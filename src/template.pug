  body
    // Часть 1 - ветка target
    .general_wrapper
      header
        .header_wrapper
          img#logoImg(src=require('./images/Logo.png'), alt='logo')
          #header_top
            img#userImg(src=require('./images/UserAvatar.png'), alt='user')
            button#target_add_button.target_add_button
          #header_middle
            button#home_page.home_page
            button#target_page.target_page
            button#setting_page.setting_page
          #header_bottom
            button#help_page.help_page
            button#logout_page.logout_page
      main
        section.target_page_wrapper
          .target_wrapper
          .target_empty-error
        // Часть 2 - ветка form
        section.bodyForm_wrapper
          .bodyForm
            form#goalForm
              .left
                .el
                  label(for='goal') &Ncy;&acy;&zcy;&vcy;&acy;&ncy;&icy;&iecy; &tscy;&iecy;&lcy;&icy;
                  input#goal.item(type='text', name='goal', placeholder='Введите название цели', required='')
                .el
                  label(for='category') &Kcy;&acy;&tcy;&iecy;&gcy;&ocy;&rcy;&icy;&yacy;
                  select#category.choice(name='category', required='')
                    option(value='') &Vcy;&ycy;&bcy;&iecy;&rcy;&icy;&tcy;&iecy; &kcy;&acy;&tcy;&iecy;&gcy;&ocy;&rcy;&icy;&yucy;
                    option(value='house') &Dcy;&ocy;&mcy;
                    option(value='car') &Mcy;&acy;&shcy;&icy;&ncy;&acy;
                    option(value='equipment') &Tcy;&iecy;&khcy;&ncy;&icy;&kcy;&acy;
                    option(value='kids') &Dcy;&iecy;&tcy;&icy;
                    option(value='education') &Ocy;&bcy;&ucy;&chcy;&iecy;&ncy;&icy;&iecy;
                    option(value='travel') &Ocy;&tcy;&pcy;&ucy;&scy;&kcy;
                    option(value='shopping') &SHcy;&ocy;&pcy;&pcy;&icy;&ncy;&gcy;
                    option(value='other') &Dcy;&rcy;&ucy;&gcy;&ocy;&iecy;
                .el
                  label(for='amount') &Scy;&ucy;&mcy;&mcy;&acy;, &kcy;&ocy;&tcy;&ocy;&rcy;&ucy;&yucy; &vcy;&ycy; &khcy;&ocy;&tcy;&icy;&tcy;&iecy; &ncy;&acy;&kcy;&ocy;&pcy;&icy;&tcy;&softcy;, &rcy;&ucy;&bcy;.
                  input#amount.item(type='text', name='amount', placeholder='Введите сумму', pattern='[0-9]*', title='Только цифры разрешены', required='')
                .el
                  label(for='priority') &Pcy;&rcy;&icy;&ocy;&rcy;&icy;&tcy;&iecy;&tcy; &tscy;&iecy;&lcy;&icy;
                  select#priority.choice(name='priority', required='')
                    option(value='') &Vcy;&ycy;&bcy;&iecy;&rcy;&icy;&tcy;&iecy; &pcy;&rcy;&icy;&ocy;&rcy;&icy;&tcy;&iecy;&tcy;
                    option(value='1') &Vcy;&ycy;&scy;&ocy;&kcy;&icy;&jcy;
                    option(value='2') &Scy;&rcy;&iecy;&dcy;&ncy;&icy;&jcy;
                    option(value='3') &Ncy;&icy;&zcy;&kcy;&icy;&jcy;
                .el
                  label(for='endDate') &Dcy;&acy;&tcy;&acy; &ocy;&kcy;&ocy;&ncy;&chcy;&acy;&ncy;&icy;&yacy; &ncy;&acy;&kcy;&ocy;&pcy;&lcy;&iecy;&ncy;&icy;&yacy;
                  input#endDate.item(type='date', name='endDate', required='')
                .el
                  label(for='currentAmount') &Scy;&ucy;&mcy;&mcy;&acy;, &kcy;&ocy;&tcy;&ocy;&rcy;&ucy;&yucy; &khcy;&ocy;&tcy;&icy;&tcy;&iecy; &vcy;&ncy;&iecy;&scy;&tcy;&icy; &scy;&iecy;&jcy;&chcy;&acy;&scy;, &rcy;&ucy;&bcy;.
                  input#currentAmount.item(type='text', name='currentAmount', placeholder='Введите сумму', pattern='[0-9]*', title='Только цифры разрешены')
                .block_for_btn
                  button#btn_save(type='submit') &Scy;&ocy;&khcy;&rcy;&acy;&ncy;&icy;&tcy;&softcy;
                  button#btn_cancel(type='submit') &Ocy;&tcy;&mcy;&iecy;&ncy;&acy;
              .chooseWrapper
            #picture.picture
              img#target_pic(src=require('./images/form_aside_pic.png'), alt='target_pic')